<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="sio.d3.javafx.cybersensi.AjoutQuestionController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox fx:id="hbox1" alignment="CENTER_LEFT" spacing="20.0">
        <Label fx:id="enonce" text="Enoncé" />
        <TextArea fx:id="valeur_enonce" minHeight="16" maxHeight="30" minWidth="300" maxWidth="350"/>
    </HBox>

    <HBox fx:id="hbox2" alignment="CENTER_LEFT" spacing="20.0">
        <Label fx:id="bonne_reponse" text="Bonne réponse" />
        <TextArea fx:id="valeur_bonne_reponse" minHeight="16" maxHeight="30" minWidth="300" maxWidth="350"/>
    </HBox>

    <HBox fx:id="hbox3" alignment="CENTER_LEFT" spacing="20.0">
        <Label fx:id="proposition1" text="proposition1" />
        <TextArea fx:id="valeur_proposition1" minHeight="16" maxHeight="30" minWidth="300" maxWidth="350"/>
    </HBox>
    <HBox fx:id="hbox4" alignment="CENTER_LEFT" spacing="20.0">
        <Label fx:id="proposition2" text="proposition1" />
        <TextArea fx:id="valeur_proposition2" minHeight="16" maxHeight="30" minWidth="300" maxWidth="350"/>
    </HBox>
    <HBox fx:id="hbox5" alignment="CENTER_LEFT" spacing="20.0">
        <Label fx:id="proposition3" text="proposition1" />
        <TextArea fx:id="valeur_proposition3" minHeight="16" maxHeight="30" minWidth="300" maxWidth="350"/>
    </HBox>

    <Button text="enregistrer" onAction="#enregistrer" />

</VBox>